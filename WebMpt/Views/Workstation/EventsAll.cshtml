@using PagedList
@using PagedList.Mvc
@model IPagedList<MPT.Model.PcEvent>

@{
    ViewBag.Title = "Cобытия всех рабочих станций";
}
<h1>@ViewBag.Title</h1>

<table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Время</th>
            <th>Станция</th>
            <th>IP</th>
            <th>Сообщение</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Workstation.NetworkName)</td>
                <td>@Html.DisplayFor(modelItem => item.Workstation.IP)</td>
                <td>@Html.DisplayFor(modelItem => item.Message)</td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager( Model, page => Url.Action("Events", new { page }), PagedListRenderOptions.Minimal)